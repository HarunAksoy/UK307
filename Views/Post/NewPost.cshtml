@model GamingBlog.Models.BlogViewModel
@{
    ViewData["Title"] = "New Post";

}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form  method="post">
            <hr />
            <div class="form-group">
            <label>Title</label>
            <input type="text" asp-for="@Model.Title" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Release Date</label>
                <input type="text" asp-for="@Model.Releasedate" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea type="text" asp-for="@Model.Content" class="form-control">
                </textarea>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>


