@model GamingBlog.Models.Contact

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <form  method="post">
            
            <hr />
            <div class="form-group">
                <label>Name</label>
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
            <label>E-Mail</label>
            <div class="form-group">
                <input type="text" asp-for="@Model.Email" class="form-control" />
            </div>
            <label>Subject</label>
            <div class="form-group">
                <input type="text" asp-for="@Model.Subject" class="form-control"  />
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea type="text" asp-for="@Model.Message" class="form-control">
                </textarea>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>
